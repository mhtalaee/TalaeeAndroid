<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".SharedPreferencesTaskFirstActivity">

    <TextView
        android:id="@+id/tvTitleName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_bg"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"

        />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:background="@color/intent_task_color"
        android:text="@string/lNewUser"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnUsersList"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@color/intent_task_color"
        android:text="@string/lUsersList"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
/>

    <Button
        android:id="@+id/btnClearList"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@color/intent_task_color"
        android:text="@string/lClearList"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />

    <!--<Button-->
        <!--android:id="@+id/btnShow"-->
        <!--android:layout_width="110dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:background="@color/intent_task_color"-->
