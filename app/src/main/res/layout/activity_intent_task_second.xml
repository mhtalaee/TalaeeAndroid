<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical"
    tools:context=".IntentTaskSecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:text="@string/lCountry"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@color/colorAccent"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:text="@string/lName"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@color/colorAccent"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:text="@string/lFamily"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/tvFamily"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@color/colorAccent"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:text="@string/lAge"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:layoutDirection="ltr"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@color/colorAccent"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:text="@string/lEmail"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:layoutDirection="ltr"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@color/colorAccent"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:text="@string/lNumber"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:gravity="start|center"
            android:layoutDirection="ltr"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@color/intent_task_color"
        android:text="@string/lBack"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />


</LinearLayout>